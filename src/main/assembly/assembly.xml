<assembly xmlns="http://maven.apache.org/ASSEMBLY/1.1.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/1.1.0 http://maven.apache.org/xsd/assembly-1.1.0.xsd">
    <id>jar-with-dependencies</id> <!-- 可以根据需要修改 -->
    <formats>
        <format>jar</format> <!-- 输出格式为 jar -->
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory> <!-- 不包括根目录 -->
    <files>
        <file>
            <source>lib/resteasy-core-spi-6.2.10.Final.jar</source> <!-- 你要打包的 JAR -->
            <outputDirectory>/</outputDirectory>
        </file>
    </files>
</assembly>
